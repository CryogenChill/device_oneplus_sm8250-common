<resources>
    <!-- Burn-in protection -->
    <bool name="config_statusBarBurnInProtection">true</bool>
    <integer name="config_shift_interval">40</integer>

    <!-- Color of the FOD view -->
    <color name="config_fodColor">#ffffe6</color>
    <color name="config_fodColorBackground">#00000000</color>

    <!-- Allow devices override audio panel location to the left side -->
    <bool name="config_audioPanelOnLeftSide">true</bool>

    <!-- Whether usage of the proximity sensor during doze is supported -->
    <bool name="doze_proximity_sensor_supported">false</bool>

    <!-- Allow devices to hide ringer button above volume slider -->
    <bool name="config_hideRingerButton">true</bool>

    <!-- Biometric Prompt -->
    <dimen name="biometric_dialog_fod_margin">125dp</dimen>

    <!-- This will sync FOD brightness with screen brightness. -->
    <bool name="config_fingerprintDimmingScreen">true</bool>

    <!-- FPSInfoService FPS node file path -->
    <string name="config_fpsInfoSysNode" translatable="false">/sys/devices/platform/soc/ae00000.qcom,mdss_mdp/drm/card0/sde-crtc-0/measured_fps</string>

    <!-- The CPU temperature divider, if needed -->
    <integer name="config_cpuTempDivider" translatable="false">1000</integer>

    <!-- The CPU temperature sensor path, defaults to empty -->
    <string name="config_cpuTempSensor" translatable="false">/sys/class/thermal/thermal_zone4/temp</string>

    <!-- Burn-in protection -->
    <bool name="config_statusBarBurnInProtection">false</bool>

    <!-- Max visible system icons -->
    <integer name="config_maxVisibleStatusIconContainer">9</integer>

    <!-- Color of the FOD view -->
    <color name="config_fodColorBackground">#00000000</color>

    <!-- Biometric Prompt -->
    <dimen name="biometric_dialog_fod_margin">125dp</dimen>
</resources>
